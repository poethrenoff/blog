<form class="search_form" action="<?= Adminko\System::selfUrl() ?>" method="get">
	<table class="search_table">
		<tr>
			<td>
				<input type="text" class="text" name="text" value="<?= $this->escape($this->search_text) ?>" errors="require"/>
				<input type="submit" class="button" value="Найти"/>
			</td>
		</tr>
	</table>
</form>
<div class="tag_cloud">
<?php foreach ($this->tag_cloud as $tag_item) { ?>
	<a href="<?= $tag_item->getTagUrl() ?>" style="font-size: <?= $tag_item->getFontSize() ?>px" title="<?= $this->escape($tag_item->getTag_title()) ?> (<?= $tag_item->getTagCount() ?>)"<?php if ($tag_item->getTagTitle() == $this->search_tag) { ?> class="selected"<?php } ?>><?= $this->escape($tag_item->getTagTitle()) ?></a>
<?php } ?>
</div>
<?php if ($this->search_list) { ?>
<?php foreach ($this->search_list as $search_item) { ?>
<table class="search_result">
	<tr>
		<td class="index">
			<?= $this->search_index++ ?>.
		</td>
		<td>
			<span class="title"><a href="<?= $search_item->getNewsUrl() ?>"><?= $search_item->getViewNewsDate() ?></a></span><p><?= $search_item->getNewsContent() ?></p>
		</td>
	</tr>
</table>
<?php } ?>
<?php if (!$this->search_list) { ?>
<div class="message">
	Ничего не найдено
</div>
<?php } ?>
<?php } ?>
<?php if ($this->pages) { ?>
<div class="pages">
	Страницы: <?= $this->pages ?>
</div>
<?php } ?>
